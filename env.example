# =============================================================================
# AI App Bootstrap - Environment Variables
# =============================================================================
# Copy this file to .env.local and configure with your values

# =============================================================================
# Backend Configuration (apps/api)
# =============================================================================

# Database
DATABASE_URL=sqlite:///./app.db
# For production: postgresql://user:password@localhost/dbname

# Supabase Auth (Free tier)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# AI Provider Configuration
# =============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter (Alternative to OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default AI Provider
DEFAULT_AI_PROVIDER=openai

# =============================================================================
# Optional AI Modules
# =============================================================================

# Workers Module (Celery + Redis)
USE_WORKERS=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# RAG Module (Vector Search)
USE_RAG=false
# Chroma (Local)
CHROMA_HOST=localhost
CHROMA_PORT=8000
# Pinecone (Cloud)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=your_index_name
# Qdrant (Cloud)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Ollama Module (Local Models)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =============================================================================
# Frontend Configuration (apps/web)
# =============================================================================

# Supabase (Same as backend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_WS_URL=ws://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME=AI App Bootstrap
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# Development Settings
# =============================================================================

# Development Mode
NODE_ENV=development
PYTHON_ENV=development

# Debug Settings
DEBUG=true
VERBOSE_LOGGING=false

# =============================================================================
# Production Settings (Override in production)
# =============================================================================

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Docker Configuration
# =============================================================================

# Database (Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Chroma (Docker)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Ollama (Docker)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
